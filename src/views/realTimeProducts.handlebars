<h1>Real Time Products</h1>

<div class="row">
    <div class="col-md-6">
        <h2>Add Product</h2>
        <form id="addProductForm">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" class="form-control" id="title" required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <input type="text" class="form-control" id="description" required>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="number" class="form-control" id="price" required>
            </div>
            <div class="mb-3">
                <label for="stock" class="form-label">Stock</label>
                <input type="number" class="form-control" id="stock" required>
            </div>
            <button type="submit" class="btn btn-primary">Add Product</button>
        </form>
    </div>
</div>

<hr>

<div class="row" id="productsContainer">
    {{#each products}}
    <div class="col-md-4 mb-4 product-card" id="product-{{this.id}}">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.description}}</p>
                <p class="card-text">Precio: ${{this.price}}</p>
                <p class="card-text">Stock: {{this.stock}}</p>
                <button class="btn btn-danger delete-btn" data-id="{{this.id}}">Delete</button>
            </div>
        </div>
    </div>
    {{/each}}
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>